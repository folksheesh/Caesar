pipeline {
    agent any

    stages {
        stage('Linting') {
            steps {
                // Lakukan linting pada file JavaScript
                sh 'npx eslint .'
            }
        }

        stage('Build Docker Image') {
            steps {
                // Bangun Docker image
                sh 'docker build -t my-html-app .'
            }
        }

        stage('Test') {
            steps {
                // Jalankan pengujian
                sh 'npm test'
            }
        }

        stage('Deploy') {
            steps {
                // Jalankan container di server produksi
                sh 'docker run -d -p 8080:80 my-html-app'
            }
        }
    }
}
